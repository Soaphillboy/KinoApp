<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KinoApp.Kinoteatri">
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand">
      
      <Label Text="Rīgā"
             HorizontalOptions="Center"
             FontSize="30"
             FontAttributes="Bold"
             TextColor="White"
             BackgroundColor="#03a9f4"/>
      
      <ListView x:Name="AllPlacesListView" VerticalOptions="FillAndExpand">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding Name}" Detail="{Binding Description}"></TextCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      
      <Label Text="Latvijā" 
             HorizontalOptions="Center"
             FontSize="30"
             FontAttributes="Bold"
             TextColor="White"
             BackgroundColor="#03a9f4"/>
      
        <ListView x:Name="VisiKinoList" VerticalOptions="FillAndExpand">
          <ListView.ItemTemplate>
            <DataTemplate>
              <TextCell Text="{Binding Name}" Detail="{Binding Description}"></TextCell>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>
  </ContentPage.Content>

   
</ContentPage>